---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  persona: string;
  ogImage?: string;
}

const {
  title,
  description,
  canonicalPath,
  persona,
  ogImage
} = Astro.props;

const siteUrl = "https://ourcouple.app";
const canonicalUrl = `${siteUrl}${canonicalPath}`;
const socialImage = ogImage ? `${siteUrl}${ogImage}` : `${siteUrl}/og-image.png`;
const appStoreId = "6758024356";
const appStoreUrl = `https://apps.apple.com/app/id${appStoreId}`;

// Structured Data - WebPage for persona landing page
const pageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": title,
  "url": canonicalUrl,
  "description": description,
  "mainEntity": {
    "@type": "MobileApplication",
    "name": "OurCouple",
    "operatingSystem": "iOS",
    "applicationCategory": "LifestyleApplication",
    "audience": {
      "@type": "Audience",
      "audienceType": persona
    },
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD"
    }
  },
  "publisher": {
    "@type": "Organization",
    "name": "OurCouple",
    "url": siteUrl
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="OurCouple" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#D4A5A9" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="OurCouple" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />

    <!-- Analytics -->
    <script
      defer
      data-website-id="dfid_qI4dBMANAwmiNsJvVpicO"
      data-domain="ourcouple.app"
      src="https://datafa.st/js/script.js">
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-background">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-gradient-radial">
      <nav class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <img src="/logo.png" alt="OurCouple" class="w-8 h-8 rounded-lg" />
          <span class="font-semibold text-text tracking-tighter">OurCouple</span>
        </a>
        <a
          href={appStoreUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 py-2 bg-primary text-white rounded-xl font-medium hover:bg-primary-dark transition-colors text-sm"
        >
          Download Free
        </a>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1 pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-card border-t border-border py-12">
      <div class="max-w-5xl mx-auto px-6">
        <div class="flex flex-col md:flex-row items-start justify-between gap-8 mb-8">
          <div class="flex flex-col gap-2">
            <div class="flex items-center gap-3">
              <img src="/logo.png" alt="OurCouple" class="w-10 h-10 rounded-xl" />
              <span class="font-semibold text-xl text-text tracking-tighter">OurCouple</span>
            </div>
            <p class="text-text-secondary text-sm max-w-xs">
              Your Shared Space
            </p>
            <a
              href={appStoreUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-4 inline-block transition-transform hover:scale-105 w-fit"
              aria-label="Download OurCouple on the App Store"
            >
            <img
            src="/app-store-badge.svg"
            alt="Download on the App Store"
            class="h-12 mx-auto"
          />
            </a>
          </div>

          <div class="flex flex-col sm:flex-row gap-8 sm:gap-12">
            <!-- OurCouple For Column -->
            <div class="flex flex-col gap-3">
              <h3 class="font-semibold text-text text-sm mb-1">OurCouple For</h3>
              <nav class="flex flex-col gap-2 text-sm">
                <a href="/for/long-distance-couples" class="text-text-secondary hover:text-primary transition-colors">Long-Distance Couples</a>
                <a href="/for/busy-couples" class="text-text-secondary hover:text-primary transition-colors">Busy Couples</a>
                <a href="/for/newlyweds" class="text-text-secondary hover:text-primary transition-colors">Newlyweds</a>
              </nav>
            </div>

            <!-- Free Tools Column -->
            <div class="flex flex-col gap-3">
              <h3 class="font-semibold text-text text-sm mb-1">Free Tools</h3>
              <nav class="flex flex-col gap-2 text-sm">
                <a href="/tools/anniversary-calculator" class="text-text-secondary hover:text-primary transition-colors">Anniversary Calculator</a>
                <a href="/tools/couple-quiz" class="text-text-secondary hover:text-primary transition-colors">Couple Quiz</a>
                <a href="/tools/bucket-list" class="text-text-secondary hover:text-primary transition-colors">Bucket List</a>
              </nav>
            </div>

            <!-- Legal Column -->
            <div class="flex flex-col gap-3">
              <h3 class="font-semibold text-text text-sm mb-1">Legal</h3>
              <nav class="flex flex-col gap-2 text-sm">
                <a href="/privacy" class="text-text-secondary hover:text-primary transition-colors">Privacy</a>
                <a href="/terms" class="text-text-secondary hover:text-primary transition-colors">Terms</a>
              </nav>
            </div>
          </div>
        </div>

        <p class="text-text-light text-sm text-center pt-6 border-t border-border">
          Â© 2026 OurCouple. Made with love
        </p>
      </div>
    </footer>
  </body>
</html>
