---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  publishDate: string;
  readingTime: string;
  category: string;
  ogImage?: string;
}

const {
  title,
  description,
  canonicalPath,
  publishDate,
  readingTime,
  category,
  ogImage
} = Astro.props;

const siteUrl = "https://ourcouple.app";
const canonicalUrl = `${siteUrl}${canonicalPath}`;
const socialImage = ogImage ? `${siteUrl}${ogImage}` : `${siteUrl}/og-image.png`;
const appStoreId = "6758024356";
const appStoreUrl = `https://apps.apple.com/app/id${appStoreId}`;

const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Structured Data - BlogPosting
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "url": canonicalUrl,
  "image": socialImage,
  "datePublished": publishDate,
  "dateModified": publishDate,
  "author": {
    "@type": "Organization",
    "name": "OurCouple",
    "url": siteUrl
  },
  "publisher": {
    "@type": "Organization",
    "name": "OurCouple",
    "url": siteUrl,
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/logo.png`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title} | OurCouple Blog</title>
    <meta name="title" content={`${title} | OurCouple Blog`} />
    <meta name="description" content={description} />
    <meta name="author" content="OurCouple" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#D4A5A9" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="OurCouple" />
    <meta property="article:published_time" content={publishDate} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />

    <!-- Analytics -->
    <script
      defer
      data-website-id="dfid_qI4dBMANAwmiNsJvVpicO"
      data-domain="ourcouple.app"
      src="https://datafa.st/js/script.js">
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-background">
    <Header />

    <!-- Main Content -->
    <main class="flex-1">
      <!-- Article Header -->
      <div class="bg-gradient-radial pt-28 pb-8">
        <div class="max-w-3xl mx-auto px-6">
          <div class="mb-6">
            <a href="/blog" class="text-text-secondary hover:text-primary transition-colors text-sm inline-flex items-center gap-1">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m15 18-6-6 6-6"/></svg>
              Back to Blog
            </a>
          </div>
          <span class="inline-block px-3 py-1 bg-primary/10 text-primary-dark text-sm font-medium rounded-full mb-4">
            {category}
          </span>
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text tracking-tighter mb-4">
            {title}
          </h1>
          <p class="text-lg text-text-secondary mb-6">{description}</p>
          <div class="flex items-center gap-4 text-sm text-text-light">
            <time datetime={publishDate}>{formattedDate}</time>
            <span>·</span>
            <span>{readingTime}</span>
          </div>
        </div>
      </div>

      <!-- Article Body -->
      <article class="max-w-3xl mx-auto px-6 py-12">
        <div class="prose">
          <slot />
        </div>
      </article>

      <!-- CTA Section -->
      <section class="py-24 bg-gradient-radial">
        <div class="max-w-4xl mx-auto px-6 text-center">
          <h2 class="tracking-tighter text-4xl md:text-5xl font-bold text-text mb-6">
            Try OurCouple Free
          </h2>
          <p class="text-base text-text-secondary mb-10">
            Your private shared space for daily messages, memories, notes, and events. One subscription covers both partners.
          </p>
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-transform hover:scale-105"
          >
            <img
              src="/app-store-badge.svg"
              alt="Download on the App Store"
              class="h-16 mx-auto"
            />
          </a>
          <p class="text-text-secondary text-sm mt-2">Free to start · No credit card</p>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
