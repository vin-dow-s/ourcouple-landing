---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  publishDate: string;
  readingTime: string;
  category: string;
  ogImage?: string;
}

const {
  title,
  description,
  canonicalPath,
  publishDate,
  readingTime,
  category,
  ogImage
} = Astro.props;

const siteUrl = "https://ourcouple.app";
const canonicalUrl = `${siteUrl}${canonicalPath}`;
const socialImage = ogImage ? `${siteUrl}${ogImage}` : `${siteUrl}/og-image.png`;
const appStoreId = "6758024356";
const appStoreUrl = `https://apps.apple.com/app/id${appStoreId}`;

const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Structured Data - BlogPosting
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "url": canonicalUrl,
  "image": socialImage,
  "datePublished": publishDate,
  "dateModified": publishDate,
  "author": {
    "@type": "Organization",
    "name": "OurCouple",
    "url": siteUrl
  },
  "publisher": {
    "@type": "Organization",
    "name": "OurCouple",
    "url": siteUrl,
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/logo.png`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title} | OurCouple Blog</title>
    <meta name="title" content={`${title} | OurCouple Blog`} />
    <meta name="description" content={description} />
    <meta name="author" content="OurCouple" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#D4A5A9" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="OurCouple" />
    <meta property="article:published_time" content={publishDate} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />

    <!-- Analytics -->
    <script
      defer
      data-website-id="dfid_qI4dBMANAwmiNsJvVpicO"
      data-domain="ourcouple.app"
      src="https://datafa.st/js/script.js">
    </script>
  </head>
