---
import PersonaLayout from '../../layouts/PersonaLayout.astro';

const appStoreUrl = "https://apps.apple.com/app/id6758024356";

const features = [
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
    </svg>`,
    title: "1-Minute Daily Check-in",
    description: "One message and one photo. That's it. Takes less than a minute but tells your partner 'I'm thinking of you' — even on your busiest day.",
    highlight: "Takes less than 60 seconds"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
      <circle cx="9" cy="9" r="2"/>
      <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
    </svg>`,
    title: "Memories on Autopilot",
    description: "Your daily messages automatically become your memory album. No effort needed — just live your life and OurCouple captures the highlights.",
    highlight: "Zero extra effort required"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/>
      <path d="M14 2v4a2 2 0 0 0 2 2h4"/>
      <path d="M10 9H8"/>
      <path d="M16 13H8"/>
      <path d="M16 17H8"/>
    </svg>`,
    title: "Shared Lists & Notes",
    description: "Grocery lists, date night ideas, vacation planning — all in one place. Both can edit, both stay in sync. No more 'did you see my text?'",
    highlight: "Both can edit in real-time"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M8 2v4"/>
      <path d="M16 2v4"/>
      <rect width="18" height="18" x="3" y="4" rx="2"/>
      <path d="M3 10h18"/>
    </svg>`,
    title: "Never Miss a Date",
    description: "Anniversaries, birthdays, date nights — OurCouple reminds you before they happen. Your partner will think you have the best memory.",
    highlight: "Smart reminders, zero mental load"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="4"/>
      <path d="M12 2v2"/>
      <path d="M12 20v2"/>
      <path d="m4.93 4.93 1.41 1.41"/>
      <path d="m17.66 17.66 1.41 1.41"/>
      <path d="M2 12h2"/>
      <path d="M20 12h2"/>
      <path d="m6.34 17.66-1.41 1.41"/>
      <path d="m19.07 4.93-1.41 1.41"/>
    </svg>`,
    title: "Surprise Love Notes",
    description: "Write a quick note when you have a spare second. It shows up on their screen when they least expect it — a little burst of love during their hectic day.",
    highlight: "Brighten their busiest days"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
    </svg>`,
    title: "Private & Secure",
    description: "Your couple space is just for you two. Encrypted, ad-free, and never shared. Your relationship data stays private.",
    highlight: "Your data, encrypted"
  }
];

const faqs = [
  {
    question: "How much time does OurCouple actually take?",
    answer: "About one minute a day. You send one message and one photo — that's the core habit. You can spend more time browsing memories or writing notes, but the daily check-in is designed to be quick and meaningful."
  },
  {
    question: "What if I forget to send my daily message?",
    answer: "Life happens! OurCouple sends a gentle reminder if you haven't checked in. But there's no penalty or streak pressure — it's about connection, not perfection."
  },
  {
    question: "Is this just another app adding to my screen time?",
    answer: "The opposite. OurCouple replaces scattered texts, forgotten plans, and missed dates with one organized space. Most couples say it actually reduces the mental load of staying connected."
  },
  {
    question: "Can we use the shared notes for practical stuff like groceries?",
    answer: "Absolutely. Shared notes work for everything — grocery lists, gift ideas, home projects, vacation planning. Think of it as your couple command center."
  },
  {
    question: "Is it free?",
    answer: "Yes! OurCouple is free to download and use. Daily messages, memories, notes, and events are all included. No credit card needed."
  }
];
---

<PersonaLayout
  title="Best Couple App for Busy Schedules | OurCouple"
  description="Too busy to stay connected? OurCouple helps busy couples stay close with 1-minute daily check-ins, shared notes, and event reminders — even on your craziest days. Free for iOS."
  canonicalPath="/for/busy-couples"
  persona="Busy Couples"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-radial overflow-hidden">
    <div class="absolute top-20 left-10 w-64 h-64 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-partner/10 rounded-full blur-3xl"></div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 py-20 md:pb-28">
      <div class="text-center max-w-3xl mx-auto">
        <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary-dark text-sm font-medium rounded-full mb-6">
          For Busy Couples
        </span>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text tracking-tighter mb-6">
          Too Busy to Disconnect.<br class="hidden sm:inline" /> Never Too Busy to Connect.
        </h1>

        <p class="text-lg md:text-xl text-text-secondary mb-8 max-w-2xl mx-auto">
          OurCouple takes just one minute a day. A daily message, a shared photo, and a private space to keep your relationship front and center — even when life gets hectic.
        </p>

        <div class="flex flex-col items-center mb-8">
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-transform hover:scale-105"
            data-fast-goal="cta_busy_hero_download"
          >
            <img
              src="/app-store-badge.svg"
              alt="Download on the App Store"
              class="h-14"
            />
          </a>
          <p class="text-text-secondary text-sm mt-2">Free to start • No credit card</p>
        </div>

        <!-- Video Preview -->
        <div class="mt-8 mb-8">
          <div class="inline-block rounded-3xl shadow-lg shadow-black/15">
            <img
              src="/mockup-screenshot.png"
              alt="OurCouple App for busy couples"
              class="mx-auto max-h-[45vh] rounded-3xl md:hidden"
            />
            <video
              autoplay
              muted
              loop
              playsinline
              class="mx-auto max-h-[45vh] rounded-3xl hidden md:block"
            >
              <source src="/iphone-mockup.mp4" type="video/mp4" />
            </video>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Pain Point Section -->
  <section class="py-16 bg-card" data-fast-scroll="busy_scroll_pain_points">
    <div class="max-w-4xl mx-auto px-6">
      <div class="bg-background rounded-2xl border border-border p-8 md:p-10">
        <h2 class="text-2xl md:text-3xl font-bold text-text tracking-tighter mb-4 text-center">
          Life gets busy. Your relationship<br />shouldn't be the thing that suffers.
        </h2>
        <div class="grid md:grid-cols-2 gap-6 mt-8">
          <div class="flex gap-3">
            <span class="text-red-400 mt-1">✕</span>
            <p class="text-text-secondary">Weeks go by without a meaningful moment together</p>
          </div>
          <div class="flex gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <p class="text-text-secondary">One intentional minute a day changes everything</p>
          </div>
          <div class="flex gap-3">
            <span class="text-red-400 mt-1">✕</span>
            <p class="text-text-secondary">Important dates forgotten because you're overwhelmed</p>
          </div>
          <div class="flex gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <p class="text-text-secondary">Automatic reminders for every milestone and event</p>
          </div>
          <div class="flex gap-3">
            <span class="text-red-400 mt-1">✕</span>
            <p class="text-text-secondary">Shared plans lost in work emails and group chats</p>
          </div>
          <div class="flex gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <p class="text-text-secondary">One organized space for your couple life</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-background" data-fast-scroll="busy_scroll_features">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-text tracking-tighter mb-4">
          Designed for Your Schedule
        </h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Every feature built to fit into even the busiest day.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <article class="p-6 rounded-2xl bg-card border border-border hover:border-primary/30 transition-colors">
            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="font-semibold text-lg text-text mb-2">{feature.title}</h3>
            <p class="text-text-secondary text-sm mb-3">{feature.description}</p>
            <span class="inline-block text-xs font-medium text-primary bg-primary/10 px-2 py-1 rounded-full">
              {feature.highlight}
            </span>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-20 bg-card" data-fast-scroll="busy_scroll_how_it_works">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-text tracking-tighter mb-4">
          Start in Seconds
        </h2>
        <p class="text-text-secondary">
          Connect with your partner from anywhere in the world
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-xl font-bold text-primary">1</span>
          </div>
          <h3 class="font-semibold text-text mb-2">Download & Sign Up</h3>
          <p class="text-text-secondary text-sm">30 seconds. That's all it takes.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-xl font-bold text-primary">2</span>
          </div>
          <h3 class="font-semibold text-text mb-2">Invite Your Partner</h3>
          <p class="text-text-secondary text-sm">Share the code — text, DM, or whisper it in person</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-xl font-bold text-primary">3</span>
          </div>
          <h3 class="font-semibold text-text mb-2">One Minute a Day</h3>
          <p class="text-text-secondary text-sm">Send your daily check-in. That's the whole habit.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial/Quote Section -->
  <section class="py-20 bg-background" data-fast-scroll="busy_scroll_testimonial">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <div class="bg-card rounded-2xl border border-border p-8 md:p-12">
        <svg class="w-10 h-10 text-primary/30 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
        <blockquote class="text-xl md:text-2xl text-text font-medium mb-6">
          "We both work 60-hour weeks. OurCouple is the one minute a day that keeps us feeling like a team. It's become our favorite tiny ritual."
        </blockquote>
        <p class="text-text-secondary">— A couple who refuses to let busy mean distant</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-card" data-fast-scroll="busy_scroll_faq">
    <div class="max-w-3xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-text tracking-tighter mb-4">
          Questions About Busy Schedules
        </h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group bg-background border border-border rounded-2xl">
            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
              <h3 class="font-semibold text-text pr-4">{faq.question}</h3>
              <svg class="w-5 h-5 text-text-secondary group-open:rotate-180 transition-transform flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="m6 9 6 6 6-6"/>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-text-secondary">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-radial" data-fast-scroll="busy_scroll_cta">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="tracking-tighter text-4xl md:text-5xl font-bold text-text mb-6">
        One Minute. Every Day. That's All It Takes.
      </h2>
      <p class="text-base text-text-secondary mb-10">
        Join busy couples who stay connected with OurCouple. Start free today.
      </p>

      <a
        href={appStoreUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block transition-transform hover:scale-105"
        data-fast-goal="cta_busy_bottom_download"
      >
        <img
          src="/app-store-badge.svg"
          alt="Download on the App Store"
          class="h-16 mx-auto"
        />
      </a>
      <p class="text-text-secondary text-sm mt-2">Free to download • Works on any iPhone</p>
    </div>
  </section>


  </section>
</PersonaLayout>
