---
import PersonaLayout from '../../layouts/PersonaLayout.astro';

const appStoreUrl = "https://apps.apple.com/app/id6758024356";

const features = [
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
    </svg>`,
    title: "Daily Love Ritual",
    description: "One message and one photo a day. A small daily habit that reminds you both why you chose each other — even after years of marriage.",
    highlight: "Keeps the spark alive daily"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
      <circle cx="9" cy="9" r="2"/>
      <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
    </svg>`,
    title: "Your Marriage Album",
    description: "From your wedding day to yesterday's sunset walk. Build a living timeline of your marriage, organized and always accessible.",
    highlight: "Relive your best moments"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/>
      <path d="M14 2v4a2 2 0 0 0 2 2h4"/>
      <path d="M10 9H8"/>
      <path d="M16 13H8"/>
      <path d="M16 17H8"/>
    </svg>`,
    title: "Shared Life Management",
    description: "Household lists, vacation plans, renovation ideas, or family goals. One shared space that keeps your married life organized and aligned.",
    highlight: "Your couple command center"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M8 2v4"/>
      <path d="M16 2v4"/>
      <rect width="18" height="18" x="3" y="4" rx="2"/>
      <path d="M3 10h18"/>
    </svg>`,
    title: "Anniversary & Milestone Tracking",
    description: "Your wedding anniversary, first date, first trip — every meaningful date tracked and celebrated. Never miss a chance to honor your history.",
    highlight: "Never forget a special date"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="4"/>
      <path d="M12 2v2"/>
      <path d="M12 20v2"/>
      <path d="m4.93 4.93 1.41 1.41"/>
      <path d="m17.66 17.66 1.41 1.41"/>
      <path d="M2 12h2"/>
      <path d="M20 12h2"/>
      <path d="m6.34 17.66-1.41 1.41"/>
      <path d="m19.07 4.93-1.41 1.41"/>
    </svg>`,
    title: "Surprise Love Notes",
    description: "Leave a sweet message that pops up when they least expect it. Small surprises that keep the romance alive — even after decades together.",
    highlight: "Romance doesn't have to fade"
  },
  {
    icon: `<svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
    </svg>`,
    title: "Private & Secure",
    description: "Your marriage stays between you two. Encrypted, ad-free, and never shared with third parties. A safe space for your love story.",
    highlight: "Your data, encrypted"
  }
];

const faqs = [
  {
    question: "We've been married for years — is OurCouple still useful?",
    answer: "Especially! Long-married couples often say it reignites the intentionality they had when dating. The daily check-in creates a moment of connection that busy married life often pushes aside. Think of it as your daily 'I'm thinking of you.'"
  },
  {
    question: "How is this different from sharing a Google calendar?",
    answer: "A shared calendar manages logistics. OurCouple nurtures your relationship. It's where you send love notes, save memories, and build daily rituals — not just coordinate pickup times. It's the emotional layer your marriage deserves."
  },
  {
    question: "Can we use it for household planning too?",
    answer: "Yes! The shared notes feature works for anything — grocery lists, home projects, vacation planning, family goals. It's your couple command center alongside the emotional connection features."
  },
  {
    question: "Is it free?",
    answer: "Yes! OurCouple is free to download and use. Daily messages, memories, notes, and events are all included. No credit card needed."
  },
  {
    question: "What if my spouse isn't into apps?",
    answer: "OurCouple is incredibly simple — no learning curve. The daily check-in takes less than a minute. Most reluctant partners love it within the first week once they receive their first daily love note. Start by sending them one!"
  }
];
---

<PersonaLayout
  title="Best App for Married Couples | OurCouple"
  description="Keep the spark alive after 'I do.' OurCouple helps married couples stay connected with daily check-ins, shared memories, love notes, and milestone tracking. Free for iOS."
  canonicalPath="/for/married-couples"
  persona="Married Couples"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-radial overflow-hidden">
    <div class="absolute top-20 left-10 w-64 h-64 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-partner/10 rounded-full blur-3xl"></div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 py-20 md:pb-28">
      <div class="text-center max-w-3xl mx-auto">
        <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary-dark text-sm font-medium rounded-full mb-6">
          For Married Couples
        </span>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text tracking-tighter mb-6">
          Marriage Is Beautiful.<br class="hidden sm:inline" /> Keep It That Way.
        </h1>

        <p class="text-lg md:text-xl text-text-secondary mb-8 max-w-2xl mx-auto">
          OurCouple is your private space to nurture your marriage every single day. Daily messages, shared memories, and the little gestures that keep love growing.
        </p>

        <div class="flex flex-col items-center mb-8">
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-transform hover:scale-105"
            data-fast-goal="cta_married_hero_download"
          >
            <img
              src="/app-store-badge.svg"
              alt="Download on the App Store"
              class="h-14"
            />
          </a>
          <p class="text-text-secondary text-sm mt-2">Free to start • No credit card</p>
        </div>

        <!-- Video Preview -->
        <div class="mt-8 mb-8">
          <div class="inline-block rounded-3xl shadow-lg shadow-black/15">
            <img
              src="/mockup-screenshot.png"
              alt="OurCouple App for married couples"
              class="mx-auto max-h-[45vh] rounded-3xl md:hidden"
            />
            <video
              autoplay
              muted
              loop
              playsinline
              class="mx-auto max-h-[45vh] rounded-3xl hidden md:block"
            >
              <source src="/iphone-mockup.mp4" type="video/mp4" />
            </video>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Pain Point Section -->
  <section class="py-16 bg-card" data-fast-scroll="married_scroll_pain_points">
    <div class="max-w-4xl mx-auto px-6">
      <div class="bg-background rounded-2xl border border-border p-8 md:p-10">
        <h2 class="text-2xl md:text-3xl font-bold text-text tracking-tighter mb-4 text-center">
          Marriage takes work. But it doesn't<br />have to feel like work.
        </h2>
        <div class="grid md:grid-cols-2 gap-6 mt-8">
          <div class="flex gap-3">
            <span class="text-red-400 mt-1">✕</span>
            <p class="text-text-secondary">Conversations reduced to logistics and to-do lists</p>
          </div>
          <div class="flex gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <p class="text-text-secondary">Daily moments of real, intentional connection</p>
          </div>
          <div class="flex gap-3">
            <span class="text-red-400 mt-1">✕</span>
            <p class="text-text-secondary">Anniversaries and special dates forgotten in the chaos</p>
          </div>
          <div class="flex gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <p class="text-text-secondary">Automatic reminders for every milestone</p>
          </div>
          <div class="flex gap-3">
            <span class="text-red-400 mt-1">✕</span>
            <p class="text-text-secondary">Years of memories buried in old phone backups</p>
          </div>
          <div class="flex gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <p class="text-text-secondary">A living album of your marriage, always growing</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-background" data-fast-scroll="married_scroll_features">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-text tracking-tighter mb-4">
          Built for Your Marriage
        </h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Every feature designed to help your love grow stronger with time.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <article class="p-6 rounded-2xl bg-card border border-border hover:border-primary/30 transition-colors">
            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="font-semibold text-lg text-text mb-2">{feature.title}</h3>
            <p class="text-text-secondary text-sm mb-3">{feature.description}</p>
            <span class="inline-block text-xs font-medium text-primary bg-primary/10 px-2 py-1 rounded-full">
              {feature.highlight}
            </span>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-20 bg-card" data-fast-scroll="married_scroll_how_it_works">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-text tracking-tighter mb-4">
          Start in Seconds
        </h2>
        <p class="text-text-secondary">
          Connect with your partner from anywhere in the world
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-xl font-bold text-primary">1</span>
          </div>
          <h3 class="font-semibold text-text mb-2">Download & Sign Up</h3>
          <p class="text-text-secondary text-sm">Create your account in under 30 seconds</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-xl font-bold text-primary">2</span>
          </div>
          <h3 class="font-semibold text-text mb-2">Invite Your Spouse</h3>
          <p class="text-text-secondary text-sm">Share the code — text it, email it, or just show them your phone</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <span class="text-xl font-bold text-primary">3</span>
          </div>
          <h3 class="font-semibold text-text mb-2">Grow Together</h3>
          <p class="text-text-secondary text-sm">Your private marriage space is ready. The next chapter starts now.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial/Quote Section -->
  <section class="py-20 bg-background" data-fast-scroll="married_scroll_testimonial">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <div class="bg-card rounded-2xl border border-border p-8 md:p-12">
        <svg class="w-10 h-10 text-primary/30 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
        <blockquote class="text-xl md:text-2xl text-text font-medium mb-6">
          "Married 12 years and we almost forgot how to be intentional. OurCouple's daily message became our favorite 1-minute ritual. It's like dating each other all over again."
        </blockquote>
        <p class="text-text-secondary">— A couple rediscovering each other after a decade</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-card" data-fast-scroll="married_scroll_faq">
    <div class="max-w-3xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-text tracking-tighter mb-4">
          Questions About Married Couples
        </h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group bg-background border border-border rounded-2xl">
            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
              <h3 class="font-semibold text-text pr-4">{faq.question}</h3>
              <svg class="w-5 h-5 text-text-secondary group-open:rotate-180 transition-transform flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="m6 9 6 6 6-6"/>
              </svg>
            </summary>
            <div class="px-6 pb-6 text-text-secondary">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-radial" data-fast-scroll="married_scroll_cta">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="tracking-tighter text-4xl md:text-5xl font-bold text-text mb-6">
        Invest in Your Marriage. One Minute a Day.
      </h2>
      <p class="text-base text-text-secondary mb-10">
        Join married couples who choose to keep their love intentional. Download OurCouple free.
      </p>

      <a
        href={appStoreUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block transition-transform hover:scale-105"
        data-fast-goal="cta_married_bottom_download"
      >
        <img
          src="/app-store-badge.svg"
          alt="Download on the App Store"
          class="h-16 mx-auto"
        />
      </a>
      <p class="text-text-secondary text-sm mt-2">Free to download • Works on any iPhone</p>
    </div>
  </section>
</PersonaLayout>
