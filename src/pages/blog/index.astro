---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const siteUrl = "https://ourcouple.app";
const appStoreId = "6758024356";
const appStoreUrl = `https://apps.apple.com/app/id${appStoreId}`;

const posts = [
  {
    title: "How Well Do You Know Your Partner? 100+ Questions to Find Out",
    description: "Test your relationship knowledge with 100+ fun questions for couples. From silly to deep — plus a free interactive quiz to compare answers with your partner.",
    slug: "how-well-do-you-know-your-partner",
    category: "Connection",
    date: "2026-02-10",
    readingTime: "10 min read"
  },
  {
    title: "How Long Have We Been Dating? How to Calculate & Celebrate Every Milestone",
    description: "Find out exactly how long you've been together — in days, weeks, and months. Plus every relationship milestone worth celebrating, from 100 days to 50 years.",
    slug: "how-long-have-we-been-dating",
    category: "Connection",
    date: "2026-02-10",
    readingTime: "8 min read"
  },
  {
    title: "Best Couples Journal Apps in 2026",
    description: "An honest comparison of the top couples journal and relationship apps — features, pricing, privacy, and which one is right for you.",
    slug: "best-couples-journal-apps",
    category: "App Guides",
    date: "2026-02-06",
    readingTime: "10 min read"
  },
  {
    title: "150+ Deep Questions to Ask Your Partner",
    description: "Conversation starters for every stage of your relationship — from fun and flirty to deep and meaningful.",
    slug: "questions-to-ask-your-partner",
    category: "Connection",
    date: "2026-02-06",
    readingTime: "12 min read"
  },
  {
    title: "Why Your Relationship Data Deserves Encryption",
    description: "Most couples apps fail privacy audits. Here's why it matters and what to look for.",
    slug: "relationship-data-encryption",
    category: "Privacy",
    date: "2026-02-06",
    readingTime: "7 min read"
  },
  {
    title: "50 Free Date Night Ideas at Home",
    description: "Creative, budget-friendly date night ideas that bring you closer without spending a dime.",
    slug: "free-date-night-ideas",
    category: "Date Ideas",
    date: "2026-02-06",
    readingTime: "8 min read"
  }
];

const pageSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "OurCouple Blog",
  "url": `${siteUrl}/blog`,
  "description": "Relationship tips, date ideas, and honest app reviews for couples who want to stay connected.",
  "publisher": {
    "@type": "Organization",
    "name": "OurCouple",
    "url": siteUrl
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>OurCouple Blog — Relationship Tips, Date Ideas & App Reviews</title>
    <meta name="title" content="OurCouple Blog — Relationship Tips, Date Ideas & App Reviews" />
    <meta name="description" content="Relationship tips, date ideas, and honest app reviews for couples who want to stay connected." />
    <meta name="author" content="OurCouple" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#D4A5A9" />

    <link rel="canonical" href={`${siteUrl}/blog`} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${siteUrl}/blog`} />
    <meta property="og:title" content="OurCouple Blog — Relationship Tips, Date Ideas & App Reviews" />
    <meta property="og:description" content="Relationship tips, date ideas, and honest app reviews for couples who want to stay connected." />
    <meta property="og:image" content={`${siteUrl}/og-image2.png`} />
    <meta property="og:site_name" content="OurCouple" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="OurCouple Blog — Relationship Tips, Date Ideas & App Reviews" />
    <meta name="twitter:description" content="Relationship tips, date ideas, and honest app reviews for couples who want to stay connected." />

    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />

    <script
      defer
      data-website-id="dfid_qI4dBMANAwmiNsJvVpicO"
      data-domain="ourcouple.app"
      src="https://datafa.st/js/script.js">
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-background">
    <Header />

    <main class="flex-1">
      <!-- Hero -->
      <section class="bg-gradient-radial pt-28 pb-8">
        <div class="max-w-4xl mx-auto px-6 text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-text tracking-tighter mb-4">
            The OurCouple Blog
          </h1>
          <p class="text-lg text-text-secondary max-w-2xl mx-auto">
            Relationship tips, date ideas, and honest app reviews for couples who want to stay connected.
          </p>
        </div>
      </section>

      <!-- Posts Grid -->
      <section class="py-8">
        <div class="max-w-4xl mx-auto px-6">
          <div class="grid md:grid-cols-2 gap-6">
            {posts.map((post) => (
              <a
                href={`/blog/${post.slug}`}
                class="group block bg-card border border-border rounded-2xl p-6 hover:border-primary/40 transition-all hover:shadow-lg hover:shadow-primary/5"
              >
                <span class="inline-block px-3 py-1 bg-primary/10 text-primary-dark text-xs font-medium rounded-full mb-4">
                  {post.category}
                </span>
                <h2 class="text-xl font-bold text-text tracking-tight mb-2 group-hover:text-primary-dark transition-colors">
                  {post.title}
                </h2>
                <p class="text-text-secondary text-sm mb-4 line-clamp-2">
                  {post.description}
                </p>
                <div class="flex items-center gap-3 text-xs text-text-light">
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  </time>
                  <span>·</span>
                  <span>{post.readingTime}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="py-24 bg-gradient-radial">
        <div class="max-w-4xl mx-auto px-6 text-center">
          <h2 class="tracking-tighter text-4xl md:text-5xl font-bold text-text mb-6">
            Try OurCouple Free
          </h2>
          <p class="text-base text-text-secondary mb-10">
            Daily messages, shared memories, notes, and events — all in one private space for you and your partner.
          </p>
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-transform hover:scale-105"
          >
            <img src="/app-store-badge.svg" alt="Download on the App Store" class="h-16 mx-auto" />
          </a>
          <p class="text-text-secondary text-sm mt-2">Free to start · No credit card</p>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
