---
import ToolLayout from '../../layouts/ToolLayout.astro';

const tools = [
  {
    title: "Anniversary Calculator",
    description: "Calculate all your relationship milestones â€” 100 days, 1000 days, and more. Never miss a special date.",
    href: "/tools/anniversary-calculator",
    icon: "calendar"
  },
  {
    title: "How Well Do You Know Your Partner?",
    description: "Take the quiz about your partner, then share it with them to see how well you really know each other.",
    href: "/tools/couple-quiz",
    icon: "heart"
  },
  {
    title: "Bucket List Generator",
    description: "Get personalized date ideas based on your interests, budget, and style. Never run out of things to do together.",
    href: "/tools/bucket-list",
    icon: "list"
  },
  {
    title: "Love Language Quiz",
    description: "Discover your love language in 5 quick questions. Compare with your partner to understand each other better.",
    href: "/tools/love-language",
    icon: "chat"
  }
];
---

<ToolLayout
  title="Free Tools for Couples | OurCouple"
  description="Free relationship tools to help couples connect better. Anniversary calculator, couple quizzes, date ideas generator, and love language assessment."
  canonicalPath="/tools"
>
  <div class="max-w-4xl mx-auto px-4">
    <!-- Hero -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-text tracking-tighter mb-4">
        Free Tools for Couples
      </h1>
      <p class="text-text-secondary text-lg max-w-2xl mx-auto">
        Fun, free tools to help you and your partner connect, celebrate milestones, and understand each other better.
      </p>
    </div>

    <!-- Tools Grid -->
    <div class="grid md:grid-cols-2 gap-6 mb-16">
      {tools.map((tool, index) => (
        <a
          href={tool.href}
          class="tool-card group p-6 rounded-2xl bg-card border border-border hover:border-primary/30 transition-colors"
          style={`--delay: ${index * 0.1}s`}
        >
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
            {tool.icon === "calendar" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            )}
            {tool.icon === "heart" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            )}
            {tool.icon === "list" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            )}
            {tool.icon === "chat" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            )}
          </div>

          <h2 class="font-semibold text-xl text-text mb-2 group-hover:text-primary transition-colors">
            {tool.title}
          </h2>
          <p class="text-text-secondary text-sm leading-relaxed">
            {tool.description}
          </p>

          <div class="mt-4 flex items-center text-sm font-medium text-primary">
            Try it free
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center p-8 rounded-2xl bg-primary/5 border border-primary/20">
      <h2 class="text-2xl font-semibold text-text mb-3">
        Try OurCouple
      </h2>
      <p class="text-text-secondary mb-6 max-w-lg mx-auto">
        Your private shared space with your partner. Start for free.
      </p>
      <a
        href="https://apps.apple.com/app/id6758024356"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-xl font-semibold hover:bg-primary-dark transition-colors"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        Download on iOS
      </a>
    </div>
  </div>
</ToolLayout>

<style>
  .tool-card {
    opacity: 0;
    animation: fadeIn 0.5s ease-out forwards;
    animation-delay: var(--delay);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
