---
import ToolLayout from '../../layouts/ToolLayout.astro';

const tools = [
  {
    title: "Anniversary Calculator",
    description: "Calculate all your relationship milestones — 100 days, 1000 days, and more. Never miss a special date.",
    href: "/tools/anniversary-calculator",
    icon: "calendar"
  },
  {
    title: "How Well Do You Know Your Partner?",
    description: "Take the quiz about your partner, then share it with them to see how well you really know each other.",
    href: "/tools/couple-quiz",
    icon: "heart"
  },
  {
    title: "Bucket List Generator",
    description: "Get personalized date ideas based on your interests, budget, and style. Never run out of things to do together.",
    href: "/tools/bucket-list",
    icon: "list"
  },
  {
    title: "Love Language Quiz",
    description: "Discover your love language in 5 quick questions. Compare with your partner to understand each other better.",
    href: "/tools/love-language",
    icon: "chat"
  },
  {
    title: "36 Questions to Fall in Love",
    description: "The famous study-backed questions that bring couples closer. Play together, one question at a time.",
    href: "/tools/36-questions",
    icon: "sparkle"
  },
  {
    title: "Would You Rather — Couples Edition",
    description: "40+ fun 'would you rather' questions for couples. Play together and see how well you match.",
    href: "/tools/would-you-rather",
    icon: "shuffle"
  }
];
---

<ToolLayout
  title="Free Tools for Couples | OurCouple"
  description="Free relationship tools to help couples connect better. Anniversary calculator, couple quizzes, date ideas generator, and love language assessment."
  canonicalPath="/tools"
>
  <!-- Hero -->
  <section class="pt-8 pb-8">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-text tracking-tighter mb-4">
        Free Tools for Couples
      </h1>
      <p class="text-text-secondary text-lg max-w-2xl mx-auto">
        Fun, free tools to help you and your partner connect, celebrate milestones, and understand each other better.
      </p>
    </div>
  </section>

  <div class="max-w-4xl mx-auto px-6">
    <!-- Tools Grid -->
    <div class="grid md:grid-cols-2 gap-6 py-8">
      {tools.map((tool, index) => (
        <a
          href={tool.href}
          class="tool-card group p-6 rounded-2xl bg-card border border-border hover:border-primary/30 transition-colors"
          style={`--delay: ${index * 0.1}s`}
        >
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
            {tool.icon === "calendar" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            )}
            {tool.icon === "heart" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            )}
            {tool.icon === "list" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            )}
            {tool.icon === "chat" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            )}
            {tool.icon === "sparkle" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            )}
            {tool.icon === "shuffle" && (
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            )}
          </div>

          <h2 class="font-semibold text-xl text-text mb-2 group-hover:text-primary transition-colors">
            {tool.title}
          </h2>
          <p class="text-text-secondary text-sm leading-relaxed">
            {tool.description}
          </p>

          <div class="mt-4 flex items-center text-sm font-medium text-primary">
            Try it free
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>

  </div>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-radial">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="tracking-tighter text-4xl md:text-5xl font-bold text-text mb-6">
        Try OurCouple
      </h2>
      <p class="text-base text-text-secondary mb-10">
        Your private shared space with your partner. Start for free.
      </p>
      <a
        href="https://apps.apple.com/app/id6758024356"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block transition-transform hover:scale-105"
      >
        <img src="/app-store-badge.svg" alt="Download on the App Store" class="h-16 mx-auto" />
      </a>
      <p class="text-text-secondary text-sm mt-2">Free to start · No credit card</p>
    </div>
  </section>
</ToolLayout>

<style>
  .tool-card {
    opacity: 0;
    animation: fadeIn 0.5s ease-out forwards;
    animation-delay: var(--delay);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
