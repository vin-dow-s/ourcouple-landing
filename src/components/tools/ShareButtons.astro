---
interface Props {
  title?: string;
  text?: string;
  compact?: boolean;
}

const {
  title = "Share with your partner",
  text = "Check out this couples tool!",
  compact = false
} = Astro.props;
---

<div class="share-buttons-container">
  {!compact && (
    <p class="text-text-secondary text-sm text-center mb-3">{title}</p>
  )}

  <div class={`flex items-center justify-center gap-2 ${compact ? 'gap-2' : 'gap-3'}`}>
    <!-- Copy Link -->
    <button
      type="button"
      class="share-btn copy-link-btn flex items-center gap-2 px-4 py-2 rounded-xl border border-border bg-card hover:border-primary/30 transition-colors"
      data-text={text}
      title="Copy link"
    >
      <svg class="w-5 h-5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
      {!compact && <span class="text-sm text-text">Copy Link</span>}
    </button>

    <!-- WhatsApp -->
    <a
      href="#"
      class="share-btn whatsapp-btn flex items-center gap-2 px-4 py-2 rounded-xl bg-[#25D366] text-white hover:bg-[#20BD5A] transition-colors"
      data-text={text}
      title="Share on WhatsApp"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      {!compact && <span class="text-sm">WhatsApp</span>}
    </a>

    <!-- SMS/iMessage -->
    <a
      href="#"
      class="share-btn sms-btn flex items-center gap-2 px-4 py-2 rounded-xl bg-[#34C759] text-white hover:bg-[#2DB84D] transition-colors"
      data-text={text}
      title="Send via SMS"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      {!compact && <span class="text-sm">SMS</span>}
    </a>

    <!-- Native Share (mobile) -->
    <button
      type="button"
      class="share-btn native-share-btn hidden items-center gap-2 px-4 py-2 rounded-xl border border-border bg-card hover:border-primary/30 transition-colors"
      data-text={text}
      title="Share"
    >
      <svg class="w-5 h-5 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
      </svg>
      {!compact && <span class="text-sm text-text">Share</span>}
    </button>
  </div>
</div>

<script>
  // Initialize share buttons
  function initShareButtons() {
    const currentUrl = window.location.href;

    // Copy link functionality
    document.querySelectorAll('.copy-link-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(currentUrl);
          const originalHTML = btn.innerHTML;
          btn.innerHTML = `
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-sm text-green-500">Copied!</span>
          `;
          setTimeout(() => {
            btn.innerHTML = originalHTML;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });

    // WhatsApp share
    document.querySelectorAll('.whatsapp-btn').forEach(btn => {
      const text = btn.dataset.text || '';
      btn.href = `https://wa.me/?text=${encodeURIComponent(text + ' ' + currentUrl)}`;
    });

    // SMS share
    document.querySelectorAll('.sms-btn').forEach(btn => {
      const text = btn.dataset.text || '';
      btn.href = `sms:?body=${encodeURIComponent(text + ' ' + currentUrl)}`;
    });

    // Native share API (show on supported devices)
    if (navigator.share) {
      document.querySelectorAll('.native-share-btn').forEach(btn => {
        btn.classList.remove('hidden');
        btn.classList.add('flex');
        const text = btn.dataset.text || '';

        btn.addEventListener('click', async () => {
          try {
            await navigator.share({
              title: document.title,
              text: text,
              url: currentUrl
            });
          } catch (err) {
            if (err.name !== 'AbortError') {
              console.error('Share failed:', err);
            }
          }
        });
      });
    }
  }

  // Run on page load
  initShareButtons();

  // Re-run on navigation (for SPAs)
  document.addEventListener('astro:page-load', initShareButtons);
</script>
