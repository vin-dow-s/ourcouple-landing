---
interface Props {
  steps: string[];
  currentStep?: number;
}

const { steps, currentStep = 0 } = Astro.props;
---

<div class="progress-bar-container flex items-start justify-center gap-0 mb-6">
  {steps.map((step, index) => (
    <div class="flex items-start">
      <div class="flex flex-col items-center">
        <div
          class={`step-indicator flex items-center justify-center w-8 h-8 rounded-full text-sm font-medium transition-all
            ${index < currentStep ? 'bg-green-500 text-white' : ''}
            ${index === currentStep ? 'bg-primary text-white' : ''}
            ${index > currentStep ? 'bg-border text-text-light' : ''}
          `}
          data-step={index}
        >
          {index < currentStep ? (
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          ) : (
            <span>{index + 1}</span>
          )}
        </div>
        <span
          class={`hidden sm:block text-xs mt-1.5 text-center ${index === currentStep ? 'text-primary font-medium' : 'text-text-secondary'}`}
          data-step-label={index}
        >
          {step}
        </span>
      </div>
      {index < steps.length - 1 && (
        <div
          class={`step-line w-8 sm:w-12 h-0.5 mx-1 mt-4 transition-all ${index < currentStep ? 'bg-green-500' : 'bg-border'}`}
          data-line={index}
        ></div>
      )}
    </div>
  ))}
</div>
